<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <EditText
              android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/dropinsearchtext"
                android:layout_margin="@dimen/standard_padding"
                android:background="@drawable/edittext_bg_line"
                android:padding="@dimen/standard_padding"
                android:textSize="@dimen/small_text_size"></EditText>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/option_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="4dp"
                android:layout_marginLeft="@dimen/standard_padding"
                android:layout_marginRight="@dimen/standard_padding"
                app:cardElevation="@dimen/card_elevation"
                android:background="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="4"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="@dimen/imageview_width"
                        android:layout_height="@dimen/imageview_height"
                        android:layout_weight="1"
                        android:layout_margin="@dimen/standard_padding"
                        android:src="@drawable/image"></ImageView>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:orientation="vertical"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="John Anderson"
                            android:textStyle="bold"></TextView>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Southfield, 48075"
                            android:textStyle="bold"></TextView>
                    </LinearLayout>
                </LinearLayout>
          </com.google.android.material.card.MaterialCardView>
      </LinearLayout>
